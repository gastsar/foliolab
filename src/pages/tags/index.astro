---
import Layout from "../../layouts/Layout.astro";

const allPosts = Object.values(
  import.meta.glob("../articles/*.md", { eager: true })
);
const tags = [
  ...new Set(allPosts.map((post: any) => post.frontmatter.tags).flat()),
];
const pageTitle = "Répertoire des étiquettes";
---

<Layout title={pageTitle}>
  <section class="max-w-6xl mx-auto">
    <!-- Titre -->
    <h1
      class="text-3xl font-bold text-gray-900 dark:text-white text-center mb-8"
    >
      🏷️ {pageTitle}
    </h1>

    <!-- Liste des tags -->
    <div class="flex flex-wrap gap-4 justify-center">
      {
        tags.map((tag) => (
          <a
            href={`/tags/${tag}`}
            class=" px-2  py-1 bg-mint-100 text-mint-700 dark:bg-mint-900 dark:text-mint-300 rounded-full text-sm md:text-lg font-medium shadow-md transition duration-300 hover:bg-mint-200 dark:hover:bg-mint-700"
          >
            #{tag}
          </a>
        ))
      }
    </div>
  </section>
</Layout>
