---
import BlogPost from "../components/blog/BlogPost.astro";
import Layout from "../layouts/Layout.astro";
const allPosts = Object.values(
  import.meta.glob("./articles/*.md", { eager: true })
);
const imgDefault =
  "https://images.unsplash.com/photo-1504639725590-34d0984388bd?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1074&q=80";
console.log(allPosts);
---

<Layout title="Blog - Articles et Actualités">
  <section class="max-w-6xl mx-auto p-6">
    <h1
      class="text-4xl font-extrabold mb-8 text-gray-900 dark:text-white text-center"
    >
      Blog & Actualités
    </h1>

    <!-- Barre de recherche et filtres -->
    <div class="bg-white dark:bg-gray-800 rounded-lg p-5 mb-8 shadow-lg">
      <div
        class="flex flex-col md:flex-row md:items-center md:justify-between gap-4"
      >
        <div class="relative w-full md:w-1/2">
          <input
            type="text"
            placeholder="Rechercher un article..."
            class="w-full px-5 py-3 rounded-lg border border-gray-300 dark:border-gray-700 bg-gray-50 dark:bg-gray-900 text-gray-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-primary-500"
          />
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6 absolute right-4 top-3 text-gray-500 dark:text-gray-400"
            viewBox="0 0 20 20"
            fill="currentColor"
          >
            <path
              fill-rule="evenodd"
              d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z"
              clip-rule="evenodd"></path>
          </svg>
        </div>

        <div class="flex items-center gap-3">
          <span class="text-sm text-gray-700 dark:text-gray-300"
            >Filtrer par :</span
          >
          <select
            class="px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-700 bg-gray-50 dark:bg-gray-900 text-gray-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-primary-500"
          >
            <option value="all">Tous les sujets</option>
            <option value="development">Développement</option>
            <option value="design">Design</option>
            <option value="seo">SEO</option>
            <option value="performance">Performance</option>
          </select>
        </div>
      </div>
    </div>

    <!-- Liste des articles -->
    <ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {
        allPosts.map((post) => (
          <BlogPost
            url={post.url}
            title={post.frontmatter.title}
            author={post.frontmatter.author}
            date={post.frontmatter.pubDate}
            readTime={post.frontmatter.readTime}
            img={post.frontmatter.image?.url || imgDefault}
          />
        ))
      }
    </ul>
  </section>
</Layout>
