---
import Layout from "./Layout.astro";

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <!-- Hero Section -->
  <section
    class="relative w-full h-[500px] flex items-center justify-center bg-gradient-to-r from-primary-700 to-primary-500 text-white text-center px-6"
  >
    <div class="absolute inset-0">
      <img
        src={frontmatter.image.url}
        alt={frontmatter.image.alt}
        class="w-full h-full object-cover opacity-30"
      />
    </div>
    <div class="relative z-10">
      <h1 class="text-5xl font-extrabold drop-shadow-md">
        {frontmatter.title}
      </h1>
      <p class="text-xl mt-3 opacity-80">{frontmatter.description}</p>
    </div>
  </section>

  <!-- Project Details -->
  <section
    class="max-w-5xl mx-auto p-10 bg-white shadow-lg rounded-2xl mt-[-80px] relative z-10"
  >
    <div class="grid md:grid-cols-2 gap-6 text-gray-700">
      <div>
        <h2 class="text-2xl font-semibold">üõ†Ô∏è D√©tails du projet</h2>
        <p class="mt-3">
          Type: <span class="font-medium">{frontmatter.type}</span>
        </p>
        <p>‚è±Ô∏è Dur√©e: <span class="font-medium">{frontmatter.duration}</span></p>
      </div>
      <div>
        <h2 class="text-2xl font-semibold">üöÄ Technologies utilis√©es</h2>
        <div class="flex flex-wrap gap-2 mt-3">
          {
            frontmatter.technologies &&
              frontmatter.technologies.map((tech) => (
                <span class="px-4 py-2 bg-primary-100 text-primary-800 rounded-full text-sm font-medium shadow-sm">
                  {tech}
                </span>
              ))
          }
        </div>
      </div>
    </div>
  </section>

  <!-- Project Content -->
  <section class="max-w-5xl mx-auto p-6 text-gray-800 text-lg leading-relaxed">
    <article>
      <slot />
    </article>
  </section>

  <!-- CTA Buttons -->
  <section class="max-w-5xl mx-auto flex flex-wrap gap-4 justify-center mt-10">
    {
      frontmatter.demoUrl && (
        <a
          href={frontmatter.demoUrl}
          class="px-6 py-3 bg-primary-600 text-white rounded-lg shadow-md hover:bg-primary-700 transition transform hover:scale-105"
          target="_blank"
          rel="noopener noreferrer"
        >
          üîç Voir la d√©mo
        </a>
      )
    }
    {
      frontmatter.githubUrl && (
        <a
          href={frontmatter.githubUrl}
          class="px-6 py-3 bg-gray-800 text-white rounded-lg shadow-md hover:bg-gray-900 transition transform hover:scale-105"
          target="_blank"
          rel="noopener noreferrer"
        >
          <span class="flex items-center">
            <svg
              class="w-5 h-5 mr-2"
              fill="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                fill-rule="evenodd"
                d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                clip-rule="evenodd"
              />
            </svg>
            Code source
          </span>
        </a>
      )
    }
    <a
      href="/projects"
      class="px-6 py-3 bg-gray-600 text-white rounded-lg shadow-md hover:bg-gray-700 transition transform hover:scale-105"
    >
      ‚Üê Retour aux Projets
