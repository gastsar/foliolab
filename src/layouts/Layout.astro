---
import BaseHead from "@/components/BaseHead.astro";
import Banner from "../components/Banner.astro";
import CookieConsent from "../components/cookie/CookieConsent.astro";
import Footer from "../components/Footer/Footer.astro";
import Header from "../components/Header/Header.astro";
import "../styles/global.css";
import "../styles/markdown.css";
const { title, description = "Portfolio " } = Astro.props;
---

<html lang="fr" class="scroll-smooth md:scroll-auto">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body
    class="min-h-screen font-host flex flex-col bg-white dark:bg-gray-800 text-gray-800 dark:text-gray-200 transition-colors duration-300"
  >
    <Banner />
    <Header />
    <main class="flex-grow">
      <slot />
    </main>
    <Footer />
    <CookieConsent />
  </body>
</html>
