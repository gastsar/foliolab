---
const { title, pageTitle } = Astro.props;
---

<nav
  class="sticky top-16 left-0 w-full bg-white/80 backdrop-blur-md py-3 px-6 z-50"
>
  <div
    class="max-w-3xl mx-auto flex items-center space-x-2 text-sm text-gray-600"
  >
    <a href="/" class="hover:text-primary-600 transition-colors">Accueil</a>
    <span
      ><svg
        class="w-6 h-6 text-gray-600"
        fill="currentColor"
        viewBox="0 0 20 20"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          fill-rule="evenodd"
          d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
          clip-rule="evenodd"></path>
      </svg></span
    >
    <a href={`/${pageTitle}`} class="hover:text-primary-600 transition-colors">
      {pageTitle}</a
    >
    <span
      ><svg
        class="w-6 h-6 text-gray-600"
        fill="currentColor"
        viewBox="0 0 20 20"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          fill-rule="evenodd"
          d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
          clip-rule="evenodd"></path>
      </svg></span
    >
    <span class="text-gray-900 font-semibold">{title}</span>
  </div>
</nav>
