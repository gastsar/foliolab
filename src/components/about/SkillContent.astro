---
import SkillTag from "./SkillTag.astro";

const { category, items } = Astro.props;
---

<div>
  <h3 class="text-lg font-medium mb-2 text-gray-800 dark:text-gray-100">
    {category}
  </h3>
  <div class="flex flex-wrap gap-2">
    {
      items.map((skill: any) => (
        <SkillTag
          name={skill.name}
          icon={skill.icon}
          expertise={skill.expertise}
        />
      ))
    }
  </div>
</div>
