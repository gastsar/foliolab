---
interface BlogPost {
  url: string;
  slug: string;
  title: string;
  excerpt: string;
  date: string;
  author: string;
  image: string;
  readTime?: string;
}

import { Image } from "astro:assets";

const {
  url,
  title,
  excerpt,
  date,
  author,
  image,
  readTime = "5 min",
} = Astro.props;
---

<li>
  <article
    class="max-h-60 bg-white dark:bg-gray-800 rounded-lg overflow-hidden shadow-lg hover:shadow-2xl transition-shadow ease-in-out duration-300 transform hover:scale-105"
  >
    <div class="md:flex">
      <div class="md:w-1/3">
        <img
          src={image}
          alt={title}
          class="w-full h-full object-cover rounded-t-lg md:rounded-l-lg"
        />
      </div>
      <div class="p-6 md:w-2/3">
        <div
          class="flex items-center text-sm text-gray-600 dark:text-gray-400 mb-3"
        >
          <span>{date}</span>
          <span class="mx-2">•</span>
          <span>{author}</span>
          <span class="mx-2">•</span>
          <span>{readTime} de lecture</span>
        </div>
        <h2
          class="text-2xl font-semibold mb-4 text-gray-900 dark:text-white transition-all duration-300 hover:text-primary-600"
        >
          {title}
        </h2>
        <p class="text-lg text-gray-700 dark:text-gray-300 mb-6 line-clamp-3">
          {excerpt}
        </p>
        <a
          href={url}
          class="inline-block text-primary-600 dark:text-primary-400 hover:text-primary-800 dark:hover:text-primary-600 font-medium transition-all ease-in-out duration-200"
        >
          Lire la suite →
        </a>
      </div>
    </div>
  </article>
</li>
