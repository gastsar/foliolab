---
// Définition de l'interface pour les propriétés de l'article
interface Props {
  slug: string;
  title: string;
  excerpt: string;
  date: string;
  author: string;
  image: string;
  readTime?: string;
}

// Récupération des propriétés
const {
  slug,
  title,
  excerpt,
  date,
  author,
  image,
  readTime = "5 min",
} = Astro.props;
---

<article
  class="bg-white dark:bg-gray-800 rounded-lg overflow-hidden shadow-md hover:shadow-lg transition-shadow"
>
  <div class="md:flex">
    <div class="md:w-1/3">
      <img src={image} alt={title} class="w-full h-48 object-cover" />
    </div>
    <div class="p-6 md:w-2/3">
      <div
        class="flex items-center text-sm text-gray-600 dark:text-gray-400 mb-2"
      >
        <span>{date}</span>
        <span class="mx-2">•</span>
        <span>{author}</span>
        <span class="mx-2">•</span>
        <span>{readTime} de lecture</span>
      </div>
      <h2 class="text-xl font-semibold mb-3 text-gray-900 dark:text-white">
        {title}
      </h2>
      <p class="text-gray-700 dark:text-gray-300 mb-4">
        {excerpt}
      </p>
      <a
        href={`/blog/${slug}`}
        class="inline-block text-primary-600 dark:text-primary-400 hover:underline font-medium"
      >
        Lire la suite →
      </a>
    </div>
  </div>
</article>
